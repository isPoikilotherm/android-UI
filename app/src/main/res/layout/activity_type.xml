<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/type"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/holo_blue_dark">
        <ImageView
            android:id="@+id/type_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/iv_back"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_type_one"
        android:layout_width="160dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="85dp"
        android:layout_marginLeft="20dp"
        android:text="单选题"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/btn_type_many"
        android:layout_width="160dp"
        android:layout_height="150dp"
        android:layout_alignTop="@+id/btn_type_one"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="21dp"
        android:text="多选题"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/btn_type_scoring"
        android:layout_width="160dp"
        android:layout_height="150dp"
        android:layout_alignStart="@+id/btn_type_one"
        android:layout_alignParentTop="true"
        android:layout_marginTop="264dp"
        android:text="打分题"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/btn_type_shortanswer"
        android:layout_width="160dp"
        android:layout_height="150dp"
        android:layout_alignTop="@+id/btn_type_scoring"
        android:layout_alignEnd="@+id/btn_type_many"
        android:text="简答题"
        android:textSize="30sp"/>
</RelativeLayout>