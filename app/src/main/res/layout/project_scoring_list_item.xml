<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="240dp"
    android:layout_width="match_parent"
    android:id="@+id/myTextView"
    android:orientation="horizontal">
<RelativeLayout
    android:layout_width="wrap_content"
    android:id="@+id/scoring_click"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/scoring_number"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/scoring_question"
        android:layout_width="match_parent"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:textSize="30sp"
        android:textColor="#263256"/>


    <TextView
        android:id="@+id/scoring_1"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/scoring_question"
        android:text="1"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"
        android:background="@android:color/white"/>
    <TextView
        android:id="@+id/scoring_2"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/scoring_1"
        android:text="2"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"
        android:background="@android:color/white"/>
    <TextView
        android:id="@+id/scoring_3"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/scoring_2"
        android:text="3"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"
        android:background="@android:color/white"/>
    <TextView
        android:id="@+id/scoring_4"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/scoring_3"
        android:text="4"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"
        android:background="@android:color/white"/>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/scoring_4"
        android:text="5"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"
        android:background="@android:color/white"/>

</RelativeLayout>
</LinearLayout>

